@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Admin Dashboard";
}

 <div class="dashboard-container">
    <!-- Page Header -->
    <div class="dashboard-header fade-in">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
            <h1 class="dashboard-title">
                <i class="bi bi-speedometer2 me-2"></i>Admin Dashboard
            </h1>
            <p class="welcome-text">
                Welcome back, <strong>@Context.Session.GetString("Username")</strong>
            </p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card stat-card primary fade-in">
                <div class="card-body">
                    <div>
                        <div class="stat-number">@ViewBag.TotalCars</div>
                        <p class="stat-label">Total Cars</p>
                    </div>
                    <i class="bi bi-car-front stat-icon"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card stat-card success fade-in" style="animation-delay: 0.1s;">
                <div class="card-body">
                    <div>
                        <div class="stat-number">@ViewBag.AvailableCars</div>
                        <p class="stat-label">Available Cars</p>
                    </div>
                    <i class="bi bi-check-circle stat-icon"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card stat-card info fade-in" style="animation-delay: 0.2s;">
                <div class="card-body">
                    <div>
                        <div class="stat-number">@ViewBag.TotalBookings</div>
                        <p class="stat-label">Total Bookings</p>
                    </div>
                    <i class="bi bi-calendar-check stat-icon"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card stat-card warning fade-in" style="animation-delay: 0.3s;">
                <div class="card-body">
                    <div>
                        <div class="stat-number">@ViewBag.TotalCustomers</div>
                        <p class="stat-label">Total Customers</p>
                    </div>
                    <i class="bi bi-people stat-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card actions-card mb-4 fade-in" style="animation-delay: 0.4s;">
        <div class="actions-header">
            <h5><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
        </div>
        <div class="actions-body">
            <div class="row g-3">
                <div class="col-lg-3 col-md-4 col-6">
                    <a href="@Url.Action("Create", "Cars")" class="action-btn btn btn-primary w-100">
                        <i class="bi bi-plus-circle"></i>
                        <span>Add Car</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 col-6">
                    <a href="@Url.Action("Index", "Cars")" class="action-btn btn btn-outline-primary w-100">
                        <i class="bi bi-car-front"></i>
                        <span>Manage Cars</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 col-6">
                    <a href="@Url.Action("Customers", "Admin")" class="action-btn btn btn-outline-warning w-100">
                        <i class="bi bi-people"></i>
                        <span>Manage Customers</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 col-6">
                    <a href="@Url.Action("All", "Bookings")" class="action-btn btn btn-outline-info w-100">
                        <i class="bi bi-calendar-check"></i>
                        <span>View Bookings</span>
                    </a>
                </div>
                <div class="col-lg-6 col-md-8 col-12">
                    <a href="@Url.Action("Index", "Reports")" class="action-btn btn btn-outline-success w-100">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>Generate Reports</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Bookings -->
    <div class="card bookings-card fade-in" style="animation-delay: 0.5s;">
        <div class="bookings-header">
            <h5><i class="bi bi-clock-history me-2"></i>Recent Bookings</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Booking ID</th>
                                <th>Customer</th>
                                <th>Car</th>
                                <th>Pickup Date</th>
                                <th>Return Date</th>
                                <th>Total Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                            {
                                <tr>
                                    <td><span class="booking-badge">#@booking.BookingID</span></td>
                                    <td class="fw-medium">@booking.Customer.Username</td>
                                    <td>@booking.Car.CarName <small class="text-muted">(@booking.Car.CarModel)</small></td>
                                    <td>@booking.PickupDate.ToString("MMM dd, yyyy")</td>
                                    <td>@booking.ReturnDate.ToString("MMM dd, yyyy")</td>
                                    <td><span class="total-cost">$@booking.TotalCost.ToString("F2")</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="text-center p-4">
                    <a href="@Url.Action("All", "Bookings")" class="view-all-btn">
                        View All Bookings <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-inbox display-1 d-block"></i>
                    <h5 class="mt-3 mb-1">No bookings yet</h5>
                    <p class="text-muted mb-0">Bookings will appear here once customers start making reservations</p>
                </div>
            }
        </div>
    </div>
</div>